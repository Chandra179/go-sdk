{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Connect to Docker Debugger",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 40000,
            "host": "127.0.0.1",
            "showLog": true, 
            "substitutePath": [
                {
                    "from": "${workspaceFolder}",
                    "to": "/app"
                }
            ]
        }
    ]
}