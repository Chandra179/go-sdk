# App environment
APP_ENV=dev

# Redis configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Google OAuth2
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URL=http://localhost:8080/auth/callback/google

# JWT configuration
JWT_SECRET=your_jwt_secret_must_be_at_least_32_characters_long
JWT_EXPIRATION=24h
STATE_TIMEOUT=5m

# Postgres configuration
# Note: Non-sensitive Postgres config is in internal/cfg/postgres.yaml
# Only secrets are configured via environment variables below

# Postgres password (secret)
POSTGRES_PASSWORD=mypassword

# OpenTelemetry configuration
OTEL_EXPORTER_OTLP_ENDPOINT=alloy:4317
OTEL_SERVICE_NAME=gosdk-app
OTEL_SAMPLER_RATIO=1.0

# Kafka configuration
# Note: Non-sensitive Kafka config is in internal/cfg/kafka.yaml
# Only secrets are configured via environment variables below

# Kafka TLS/Security configuration (secrets only - required when security.enabled=true in yaml)
KAFKA_TLS_CERT_FILE=/secrets/kafka_cert.pem
KAFKA_TLS_KEY_FILE=/secrets/kafka_tls_key.pem
KAFKA_TLS_CA_FILE=/secrets/kafka_ca.pem

# Kafka Schema Registry credentials (secrets only - required when schema_registry.enabled=true in yaml)
KAFKA_SCHEMA_REGISTRY_USERNAME=
KAFKA_SCHEMA_REGISTRY_PASSWORD=

# Kafka Transaction ID (secrets only - required when transaction.enabled=true in yaml)
KAFKA_TRANSACTION_ID=

# RabbitMQ configuration
# Note: Non-sensitive RabbitMQ config is in internal/cfg/rabbitmq.yaml
# Only secrets are configured via environment variables below

# RabbitMQ URL (contains credentials - secret)
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/"

# Temporal configuration
# Note: Non-sensitive Temporal config is in internal/cfg/temporal.yaml
# Only secrets are configured via environment variables below

# Temporal TLS certificate files (secrets only - required when tls_enabled=true in yaml)
TEMPORAL_TLS_CERT_FILE=/secrets/temporal_cert.pem
TEMPORAL_TLS_KEY_FILE=/secrets/temporal_key.pem
TEMPORAL_TLS_CA_FILE=/secrets/temporal_ca.pem

# HTTP Server
HTTP_PORT=8080
HTTP_READ_TIMEOUT=30s
HTTP_WRITE_TIMEOUT=30s

# Shutdown
SHUTDOWN_TIMEOUT=30s
